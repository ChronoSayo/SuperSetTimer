<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SuperSetTimer.MainPage">

    <StackLayout>
        <Frame BackgroundColor="AliceBlue" Padding="24" CornerRadius="0" x:Name="StatusFrame">
            <Label HorizontalOptions="Center" x:Name="StatusLabel" Text="Status" FontSize="70"/>
        </Frame>
        <Frame BackgroundColor="DarkGoldenrod" Padding="24" CornerRadius="0">
            <Label x:Name="SetLabel" Text="5/5" HorizontalTextAlignment="Center" TextColor="White" FontSize="30"/>
        </Frame>
        <Frame BackgroundColor="Black" Padding="24" CornerRadius="0">
            <Label x:Name="TimerLabel" HorizontalTextAlignment="Center" TextColor="White" FontSize="70"/>
        </Frame>
        <StackLayout>
            <Button HorizontalOptions="FillAndExpand" Text="Start" Clicked="OnTimerStart" HeightRequest="90"/>
            <Grid HeightRequest="100">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Text="Pause" Clicked="OnTimerStop"/>
                <Button Grid.Row="0" Grid.Column="1" Text="Reset" Clicked="OnTimerReset" />
            </Grid>
          <Grid>
            <Grid.RowDefinitions>
              <RowDefinition Height="*" />
              <RowDefinition Height="*" />
              <RowDefinition Height="*" />
              <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="Auto" />
              <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Label HorizontalTextAlignment="Start" VerticalOptions="Center" Text="Workout time:"/>
            <Entry Grid.Row="0" HorizontalTextAlignment="Start" Grid.Column="1" x:Name="ActiveEntry" Text="5" Keyboard="Numeric"/>
            <Label Grid.Row="1" Grid.Column="0" HorizontalTextAlignment="Start" VerticalOptions="Center" Text="Cooldown:"/>
            <Entry Grid.Row="1" HorizontalTextAlignment="Start" Grid.Column="1" x:Name="CooldownEntry" Text="2" Keyboard="Numeric"/>
            <Label Grid.Row="2" Grid.Column="0" HorizontalTextAlignment="Start" VerticalOptions="Center" Text="Sets:"/>
            <Entry Grid.Row="2" HorizontalTextAlignment="Start" Grid.Column="1" x:Name="SetsEntry" Text="3" Keyboard="Numeric"/>
            <Label Grid.Row="3" Grid.Column="0" HorizontalTextAlignment="Start" VerticalOptions="Center" Text="Start up:"/>
            <Entry Grid.Row="3" HorizontalTextAlignment="Start" Grid.Column="1" x:Name="StartUpEntry" Text="3" Keyboard="Numeric"/>
          </Grid>
        </StackLayout>
    </StackLayout>

</ContentPage>
